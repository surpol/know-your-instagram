<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Messages</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800 p-6">
    <!-- Title -->
    <h1 class="text-center text-3xl lg:text-4xl font-semibold text-green-600 mb-8">
        Messages: <%= count %>
    </h1>

    <!-- Back Button -->
    <div class="flex justify-center mb-6">
        <a href="/" class="text-green-600 hover:underline text-lg">â† Back to main</a>
    </div>

    <!-- Table for Messages -->
    <table class="w-full max-w-4xl mx-auto bg-white shadow-md rounded-lg overflow-hidden">
        <tbody>
            <!-- Loop through users and display each in a separate row -->
            <% users.forEach(function(user) { %>
            <tr class="border-t border-gray-200 hover:bg-gray-100">
                <td class="p-4">
                    <h2 class="text-xl font-semibold">
                        <a href="/messages/<%= user %>" class="text-green-600 hover:underline">
                            <%= user %>
                        </a>
                    </h2>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>

    <script>
        // Add any JavaScript logic here if needed
    </script>
</body>
</html>
