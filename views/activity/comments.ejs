<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Comments</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #181818;
            color: #FFF;
        }

        .comment-card {
            display: flex;
            align-items: flex-start;
            background-color: #1e1e1e;
            padding: 10px;
            border-radius: 10px;
            margin-bottom: 10px;
            border: 1px solid #333;
        }

        .comment-card img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .comment-content {
            max-width: 600px;
        }

        .comment-content h4 {
            margin: 0;
            font-size: 14px;
            font-weight: bold;
            color: #FFF;
        }

        .comment-content p {
            margin: 5px 0;
            font-size: 14px;
            color: #ccc;
        }

        .comment-content .time {
            font-size: 12px;
            color: #777;
            margin-top: 5px;
        }

        .like-button {
            font-size: 14px;
            color: #999;
            margin-left: auto;
            cursor: pointer;
        }

        .like-button:hover {
            color: #FFF;
        }

        .comment-actions {
            display: flex;
            align-items: center;
            margin-top: 5px;
            gap: 15px;
        }
    </style>
</head>
<body>
    <!-- Loop through comments and display each comment card -->
    <% commentsList.forEach(function(comment) { %>
        <div class="comment-card">
            <!-- Comment content -->
            <div class="comment-content">
                <h4>Post by: <%= comment.mediaOwner %></h4>
                <p><%= comment.comment %></p>
                <div class="comment-actions">
                    <span class="time"><%= comment.time %></span>
                </div>
            </div>
        </div>
    <% }); %>
</body>
</html>
